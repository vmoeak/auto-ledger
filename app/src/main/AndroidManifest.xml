<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
  <!-- Needed on Android 13+ to show the foreground-service notification reliably -->
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

  <!-- Accessibility hotkey service (declared on the service element; no runtime permission) -->

  <application
    android:allowBackup="true"
    android:label="Auto Ledger"
    android:icon="@mipmap/ic_launcher"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AutoLedger">

    <activity
      android:name=".ui.MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".ui.CaptureActivity"
      android:exported="false"
      android:theme="@style/Theme.AutoLedger.Transparent" />

    <service
      android:name=".tile.CaptureTileService"
      android:label="Record expense"
      android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
      android:exported="true">
      <intent-filter>
        <action android:name="android.service.quicksettings.action.QS_TILE" />
      </intent-filter>
    </service>

    <service
      android:name=".overlay.OverlayService"
      android:exported="false" />

    <service
      android:name=".overlay.OverlayConfirmService"
      android:exported="false" />

    <activity
      android:name=".ui.TriggerActivity"
      android:exported="false"
      android:noHistory="true"
      android:excludeFromRecents="true"
      android:finishOnTaskLaunch="true"
      android:theme="@style/Theme.AutoLedger.Transparent" />

    <service
      android:name=".core.CaptureForegroundService"
      android:exported="false"
      android:foregroundServiceType="mediaProjection" />

    <service
      android:name=".accessibility.HotkeyAccessibilityService"
      android:exported="false"
      android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
      </intent-filter>
      <meta-data
        android:name="android.accessibilityservice"
        android:resource="@xml/autoledger_accessibility" />
    </service>

  </application>

</manifest>
